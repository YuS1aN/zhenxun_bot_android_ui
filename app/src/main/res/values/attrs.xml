<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ClipAreaImageView">
        <attr name="clipTarget" format="reference" />
        <attr name="roundRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CornerImageView">
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="aspectRatio" format="float" />
        <attr name="drawMode" format="enum">
            <enum name="CLIP" value="0" />
            <enum name="SHADER" value="1" />
            <enum name="XFERMODE" value="2" />
        </attr>
        <attr name="rotationDegrees" format="float" />
    </declare-styleable>

    <declare-styleable name="SemicircleProgressView">
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LineWrapLayout">
        <attr name="maxLineItemCount" format="integer" />
        <attr name="enforceLineItemCount" format="boolean" />
        <attr name="horizontalDistribution" format="flags">
            <flag name="normal" value="0" />
            <flag name="spread" value="1" />
            <flag name="table" value="2" />
        </attr>
        <attr name="spreadIncludeSides" format="boolean" />
        <attr name="spreadAsMaximum" format="boolean" />
        <attr name="tableEnforceChildrenWidth" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ExpandLayout">
        <attr name="expanded" format="boolean" />
        <attr name="maxHeight" format="dimension" />
        <attr name="animationDuration" format="integer" />
    </declare-styleable>
</resources>