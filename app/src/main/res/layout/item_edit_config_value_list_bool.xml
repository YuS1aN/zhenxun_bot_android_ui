<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_line_height"
    android:paddingBottom="@dimen/margin_narrower">

    <ImageView
        android:id="@+id/iv_reduce"
        android:layout_width="@dimen/normal_line_height"
        android:layout_height="@dimen/normal_line_height"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/reduce"
        android:src="@drawable/ic_config_reduce"
        android:visibility="invisible" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sw_value"
        style="@style/Switch"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/normal_line_height"
        android:gravity="center_vertical" />
</RelativeLayout>