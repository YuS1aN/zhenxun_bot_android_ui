<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_line_height"
    android:paddingBottom="@dimen/margin_narrower">

    <ImageView
        android:id="@+id/iv_reduce"
        android:layout_width="@dimen/normal_line_height"
        android:layout_height="@dimen/normal_line_height"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/reduce"
        android:src="@drawable/ic_config_reduce"
        android:visibility="invisible" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayout.Thin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_line_height"
        android:layout_marginEnd="@dimen/margin_narrower"
        android:layout_toStartOf="@id/iv_reduce"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:maxLines="1"
            android:padding="0dp"
            tools:text="Value" />
    </com.google.android.material.textfield.TextInputLayout>
</RelativeLayout>