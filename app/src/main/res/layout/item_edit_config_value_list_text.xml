<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_line_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_reduce"
        android:layout_width="@dimen/normal_line_height"
        android:layout_height="@dimen/normal_line_height"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/reduce"
        android:src="@drawable/ic_config_reduce" />

    <TextView
        android:id="@+id/tv_text"
        style="@style/SingleLineText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_line_height"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_toStartOf="@id/iv_reduce"
        android:gravity="center_vertical" />
</RelativeLayout>